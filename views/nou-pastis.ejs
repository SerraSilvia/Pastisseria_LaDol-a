<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>La Dol√ßa</title>
    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="/styles.css" />
    <style>
      .product-card {
        background: linear-gradient(135deg, #fff9f3 0%, #ffeef7 100%);
        border-radius: 25px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(244, 194, 161, 0.3);
        border: 2px solid #f4c2a1;
        max-width: 800px;
        margin: 0 auto;
      }
      
      .product-name {
        color: #d4746a;
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
      }
      
      .content h1 {
        text-align: center;
        color: #d4746a;
        font-size: 28px;
        margin-bottom: 30px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
      }
      
      .page-header {
        position: relative;
        margin-bottom: 30px;
      }
      
      .back-button {
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        text-decoration: none;
        font-size: 14px;
        padding: 10px 18px;
      }
      
      .back-button:hover {
        text-decoration: none;
      }
      
      .edit-form-card {
        margin-top: 0;
      }
      
      .kawaii-form {
        max-width: 100%;
      }
      
      .form-group {
        margin-bottom: 20px;
      }
      
      .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #d4746a;
        font-weight: 600;
        font-size: 16px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
      }
      
      .form-group input,
      .form-group textarea {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #f4c2a1;
        border-radius: 15px;
        background: linear-gradient(135deg, #fff9f3 0%, #ffeef7 100%);
        color: #6b4423;
        font-size: 14px;
        font-family: Arial, sans-serif;
        box-shadow: 0 2px 8px rgba(244, 194, 161, 0.2);
        transition: all 0.3s ease;
        box-sizing: border-box;
      }
      
      .form-group input:focus,
      .form-group textarea:focus {
        outline: none;
        border-color: #d4746a;
        box-shadow: 0 4px 12px rgba(212, 116, 106, 0.3);
        background: linear-gradient(135deg, #fff5f0 0%, #ffe8f0 100%);
      }
      
      .form-group input::placeholder,
      .form-group textarea::placeholder {
        color: #b89a8a;
        font-style: italic;
      }
      
      .form-group textarea {
        resize: vertical;
        min-height: 100px;
      }
      
      .form-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 25px;
      }
      
      .form-buttons .btn {
        min-width: 120px;
        text-decoration: none;
      }
      
      /* Responsive design para pantallas peque√±as */
      @media (max-width: 768px) {
        .product-card {
          max-width: 90%;
          padding: 20px;
        }
        
        .back-button {
          position: static;
          transform: none;
          display: block;
          text-align: center;
          margin-bottom: 15px;
          width: fit-content;
          margin-left: auto;
          margin-right: auto;
        }
        
        .page-header {
          text-align: center;
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 10px;
        }
        
        .form-buttons {
          flex-direction: column;
          align-items: center;
        }
        
        .form-buttons .btn {
          width: 100%;
          max-width: 200px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar">
        <div class="logo-header">
          <img src="/logo_laDolca.png" alt="logo" />
          <h1>Pastisseria La Dol√ßa</h1>
        </div>

        <button id="logout" class="btn">Tancar Sessi√≥</button>
      </nav>
    </header>
    <body>
      <div class="content">
        <div class="page-header">
          <a href="/pastissos" class="btn back-button">üîô Tornar a pastissos</a>
          <h1>‚ú® Nou Past√≠s ‚ú®</h1>
        </div>
        <div class="grid">
          <!-- Formulario de creaci√≥n -->
          <div class="card product-card edit-form-card">
            <h3 class="product-name">üç∞ Crear Past√≠s üç∞</h3>
            <form id="pastisForm" class="kawaii-form">
              <div class="form-group">
                <label for="nom">üç∞ Nom del past√≠s:</label>
                <input type="text" id="nom" name="nom" placeholder="Escriu el nom del past√≠s..." required>
              </div>
              
              <div class="form-group">
                <label for="img">URL de la imatge:</label>
                <input type="url" id="img" name="img" placeholder="https://exemple.com/imatge.jpg" required>
              </div>
              
              <div class="form-group">
                <label for="preu">üí∞ Preu (‚Ç¨):</label>
                <input type="number" id="preu" name="preu" placeholder="0.00" step="0.01" min="0" required>
              </div>
              
              <div class="form-group">
                <label for="ingredients">üåü Ingredients (separats per comes):</label>
                <textarea id="ingredients" name="ingredients" rows="4" placeholder="farina, mantega, sucre, ous..." required></textarea>
              </div>
              
              <div class="form-buttons">
                <a href="/pastissos" class="btn btn-secondary">CANCELAR</a>
                <button type="submit" class="btn btn-success">CREAR</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </body>
  </body>

  <script>
    const logoutButton = document.getElementById("logout");
    const pastisForm = document.getElementById("pastisForm");

    // Logout functionality
    logoutButton?.addEventListener("click", (e) => {
      e.preventDefault();
      fetch("/api/auth/logout", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
      }).then((res) => {
        window.location.href = "/";
      });
    });

    // Submit form with POST method to create new pastis
    pastisForm?.addEventListener("submit", async (e) => {
      e.preventDefault();
      
      const formData = new FormData(pastisForm);
      const ingredients = formData.get("ingredients").split(",").map(ing => ing.trim());
      
      const pastisData = {
        nom: formData.get("nom"),
        img: formData.get("img"),
        preu: parseFloat(formData.get("preu")),
        ingredients: ingredients
      };

      try {
        const response = await fetch("/api/products/pastis", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(pastisData)
        });

        if (response.ok) {
          // Redirect to pastissos list after successful creation
          window.location.href = "/pastissos";
        } else {
          alert("Error al crear el past√≠s. Intenta-ho m√©s tard.");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("Error al crear el past√≠s. Intenta-ho m√©s tard.");
      }
    });
  </script>
</html>
